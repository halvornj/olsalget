<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/salesTimesFlavourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waitingForResponse"
        android:textColor="@color/offBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24000001" />

    <TextView
        android:id="@+id/salesTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/salesTimes"
        android:textColor="@color/offBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salesTimesFlavourText" />

    <Button
        android:id="@+id/comingWeekButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/see_coming_week"
        android:textColor="@color/offBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@color/buttonGray"
        app:strokeColor="#DADADA"
        app:strokeWidth="1dp"
        app:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/salesTimes" />

    <AutoCompleteTextView
        android:id="@+id/kommunenavnInput"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/autocompletetextview_background"
        android:completionThreshold="1"
        android:dropDownWidth="match_parent"
        android:dropDownHeight="wrap_content"
        android:hint="@string/kommuneSearch_hint"
        android:inputType="text|textCapWords"
        android:minHeight="48dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comingWeekButton" />

</androidx.constraintlayout.widget.ConstraintLayout>